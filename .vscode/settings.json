{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "files.associations": {
    "**/templates/*/*.html": "django-html",
    "**/templates/*.html": "django-html",
    "**/*.html": "html"
  },
  "beautify.language": {
    "html": ["htm", "html", "django-html"]
  },
  "[django-html]": {
    "editor.defaultFormatter": "HookyQR.beautify",
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  },
  "emmet.includeLanguages": {
    "django-html": "html"
  }
}
